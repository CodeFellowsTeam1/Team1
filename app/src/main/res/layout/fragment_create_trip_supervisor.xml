<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.createTripSupervisor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/tan">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/fragmentAppBar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#C1121F"
                app:navigationIcon="@drawable/ic_baseline_menu_24"
                app:title="LogiTrack"
                app:titleTextAppearance="@style/TextAppearance.AppCompat.Large"
                app:titleTextColor="#FFFFFF" />
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/NSVCreateTrips"
            android:layout_width="wrap_content"
            android:layout_height="630dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="58dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="24dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.743">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/newTripTitleTV"
                    android:layout_width="267dp"
                    android:layout_height="62dp"
                    android:layout_marginTop="28dp"
                    android:text="Create Trip"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="#780000"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/whereEditTV"
                    android:layout_width="298dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="40dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Where to:"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.347"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/newTripTitleTV" />

                <EditText
                    android:id="@+id/milesNumberDecimal"
                    android:layout_width="300dp"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:text="Miles:"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.363"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/whereEditTV" />

                <EditText
                    android:id="@+id/timeEditTextTime"
                    android:layout_width="299dp"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:inputType="time"
                    android:text="Total Travel Time:"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.355"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/milesNumberDecimal" />

                <EditText
                    android:id="@+id/dropOffEditTV"
                    android:layout_width="297dp"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Drop-Off:"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.361"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/timeEditTextTime" />

                <EditText
                    android:id="@+id/deadHeadNumberDecimal"
                    android:layout_width="296dp"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:text="Dead Head:"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.354"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dropOffEditTV" />

                <EditText
                    android:id="@+id/deliveryNotesMLET"
                    android:layout_width="298dp"
                    android:layout_height="52dp"
                    android:ems="10"
                    android:gravity="start|top"
                    android:inputType="textMultiLine"
                    android:text="Delivery Notes:"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.391"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rateNumberDecimal" />

                <Button
                    android:id="@+id/createTripBtn"
                    android:layout_width="139dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/dark_blue"
                    android:backgroundTint="#003049"
                    android:text="Create Trip"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.502"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/deliveryNotesMLET" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/createTripFloatingActionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="564dp"
                    android:clickable="true"
                    android:src="@drawable/ic_baseline_add_24"
                    app:backgroundTint="@color/light_blue"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.944"
                    app:layout_constraintStart_toStartOf="parent" />

                <EditText
                    android:id="@+id/rateNumberDecimal"
                    android:layout_width="293dp"
                    android:layout_height="56dp"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:text="Rate"
                    app:layout_constraintTop_toBottomOf="@+id/deadHeadNumberDecimal"
                    tools:layout_editor_absoluteX="18dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/top_app_bar"/>
</androidx.drawerlayout.widget.DrawerLayout>